@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts as List<Account>; // Đảm bảo kiểu dữ liệu của accounts là List<Account>
}

@if (accounts != null)
{
    <div class="row">
        @foreach (var item in accounts)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="@item.Avatar" alt="">
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <p>@item.Bio</p>
                        <p><a asp-controller="Account" asp-action="Profile" class="btn btn-success btn-block">View Profile</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No accounts available.</p>
}




